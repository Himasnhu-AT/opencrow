{
  "name": "opencrow",
  "version": "0.2.0",
  "private": true,
  "description": "smart popup assistant for websites",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "test": "turbo run test",
    "dev": "turbo run dev --filter=@opencrow/backend --filter=@opencrow/app --filter=@opencrow/sample-website",
    "dev:onlyapp": "turbo run dev --filter=@opencrow/backend --filter=@opencrow/app",
    "dev:all": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "d": "tsc && node dist/deploy.js"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^25.3.0",
    "husky": "^9.1.7"
  },
  "homepage": "https://github.com/himasnhu-at/opencrow#readme",
  "bugs": {
    "url": "https://github.com/himasnhu-at/opencrow/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/himasnhu-at/opencrow.git"
  },
  "license": "BSD-3-Clause",
  "author": {
    "name": "Himanshu",
    "email": "hyattherate2005@gmail.com",
    "url": "https://himanshuat.com"
  }
}
